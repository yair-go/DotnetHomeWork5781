<Window x:Class="HW3B.DoRideWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW3B"
        mc:Ignorable="d"
        Title="DoRideWindow" Height="215.122" Width="365.366">
    <Grid>
        <TextBox x:Name="tbRide" HorizontalAlignment="Left" Height="23" Margin="40,45,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="pbDone" Content="Done" HorizontalAlignment="Left" Margin="210,48,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.355,-0.634" Click="pbDone_Click"/>
        <TextBlock x:Name="tbBusRegNum" HorizontalAlignment="Left" Margin="40,10,0,0" TextWrapping="Wrap" Text="{Binding Path=RegistrationNum, Mode=OneWay}" VerticalAlignment="Top" />

    </Grid>
</Window>
