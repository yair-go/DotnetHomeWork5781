<UserControl x:Class="HW3A.StationUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HW3A"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="StationGridUserControl" Height="200" Width="800">
        <TextBox x:Name="tbStationKey" HorizontalAlignment="Left" Height="23" Margin="47,25,0,0" TextWrapping="Wrap" Text="{Binding Path=StationCode, Mode=OneWay}" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbLatitude" HorizontalAlignment="Left" Height="23" Margin="117,92,0,0" TextWrapping="Wrap" Text="{Binding Path=Latitude, Mode=OneWay}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Location" HorizontalAlignment="Left" Margin="34,92,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbLongitude" HorizontalAlignment="Left" Height="23" Margin="117,130,0,0" TextWrapping="Wrap" Text="{Binding Path=Longitude, Mode=OneWay}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</UserControl>
